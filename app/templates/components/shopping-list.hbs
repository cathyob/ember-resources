<h3 class="list-header" {{action 'toggleListDetail'}}>{{list.title}}</h3>

<form class="form-group" {{action 'createItem' on='submit'}} >
  {{input placeholder='New Item'
          class='input-group form-control'
          value=newItem.content
  }}
  <button class="btn btn-warning btn-xs" type="submit">Create!</button>
</form>

<ul>
  {{#each list.items as |item|}}
    {{shopping-list/item
      item=item
      toggleDone='toggleItemDone'
      delete='deleteItem'
    }}
  {{/each}}

</ul>
